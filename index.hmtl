            flex-grow: 1;
        }

        .main-header .welcome-message h1 {
            font-size: 1.8em;
            color: #1d0754;
            margin: 0;
        }

        .main-header .welcome-message p {
            font-size: 1.625em;
            font-weight: bold;
            color: #5c0cf0;
            margin: 5px 0 0;
        }

        #countdown-timer {
            display: flex;
            justify-content: center;
            gap: 15px;
            margin-top: 20px;

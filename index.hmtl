        }

        .sidebar-close-btn {
            background: none;
            border: none;
            font-size: 30px;
            cursor: pointer;
            color: var(--color-dark);
            align-self: flex-end;
            margin-bottom: 20px;
        }

        .sidebar-nav ul {
            list-style: none;
            padding: 0;
            margin: 0;
            flex-grow: 1;
        }

        .sidebar-nav li a {
            display: block;
            padding: 15px 20px;
            color: var(--color-dark);

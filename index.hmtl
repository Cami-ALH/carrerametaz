        .timer-box {
            background-color: var(--color-primary);
            color: var(--color-light);
            padding: 10px 15px;
            border-radius: 8px;
            text-align: center;
            min-width: 70px;
            box-shadow: 0 4px 10px rgba(0,0,0,0.2);
        }

        .timer-box span {
            display: block;
        }

        .timer-box .label {
            font-size: 0.7em;
            text-transform: uppercase;
            margin-top: 5px;
        }

        #days, #hours, #minutes, #seconds {
            font-size: 2em;
            font-weight: bold;
        }

        .hamburger-menu-btn {
            background: none;
            border: none;
            font-size: 30px;
            cursor: pointer;
            color: var(--color-primary);
            display: flex;
            flex-direction: column;
            gap: 6px;
            padding: 5px;
        }

        .hamburger-menu-btn .bar {
            width: 30px;
            height: 3px;
            background-color: var(--color-primary);
            border-radius: 2px;
            transition: all 0.3s ease;
        }

        /* Sidebar */
        .sidebar {
            position: fixed;
            top: 0;
            right: -300px; /* Oculto por defecto */
            width: 280px;
            height: 100%;
            background-color: var(--color-light);
            box-shadow: -5px 0 15px rgba(0,0,0,0.1);
            z-index: 1001;

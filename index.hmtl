            align-items: stretch;
            max-width: 1200px; /* Centered content */
            margin: 30px auto; /* Centered content */
        }

        .dashboard-info-cards-column {
            display: flex;
            flex-direction: column;
            gap: 20px; /* Increased gap */
            flex: 1; /* Balanced column */
        }

        .dashboard-info-card {
